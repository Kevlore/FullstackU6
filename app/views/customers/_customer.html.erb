<div class="ml-5 mb-5">
  <div class="card p-5">
    <h3 class="title is-3"><%= customer.full_name%></h3>
    <% if customer.image.present? %>
      <div class="card-image">
        <figure class="image">
          <%= image_tag customer.image, style: 'height:200px;width:200px' %>
        </figure>
      </div>
    <% end %>
    <div class="card-content">
      <% if customer.has_attribute?('phone_number') %>
        <p><%= customer.phone_number %></p>
      <% end %>

      <% if customer.has_attribute?('email_address') %>
        <p></p><%= customer.email_address %></p>
      <% end %>

      <% if customer.has_attribute?('notes') %>
        <p></p><%= customer.notes %></p>
      <% end %>
    </div>
  </div>
</div>